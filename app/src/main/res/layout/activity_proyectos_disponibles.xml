<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Proyectos_disponibles">

    <Button
        android:id="@+id/btnOp1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:text="Proyecto 1"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnOp2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:text="Proyecto 2"
        android:textColor="@color/black"
        android:theme="@style/FlatButton"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="138dp" />
    <Button
        android:id="@+id/btnOp3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:text="Proyecto 3"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsalirP"
            android:layout_width="181dp"
            android:layout_height="58dp"
            android:layout_margin="12dp"
            android:background="@color/myRed"
            android:padding="8dp"
            android:text="Salir"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnRP"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/myRed"
            android:padding="8dp"
            android:text="Registrar Proyecto"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>